<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/view_common_header" />


    <LinearLayout
        android:id="@+id/chinese_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="简体中文"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/ch_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/hyp_tiny_saas_language_selected"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/hyp_tiny_saas_translucent">
    </View>

    <LinearLayout
        android:id="@+id/english_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/eng_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/hyp_tiny_saas_language_selected"
            android:layout_marginRight="20dp"
            android:visibility="gone" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/hyp_tiny_saas_translucent">
    </View>

    <LinearLayout
        android:id="@+id/ko_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="한국어"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/ko_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/hyp_tiny_saas_language_selected"
            android:visibility="gone" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/hyp_tiny_saas_translucent">
    </View>

</LinearLayout>